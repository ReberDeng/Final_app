{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": true
      }
    }
  ],
  "subPackages": [
    {
      "root": "subPackages/home",
      "pages": [
        {
          "path": "articles/articles_detail",
          "style": {
            "navigationBarTitleText": "文章详情",
            "navigationStyle": "custom",
            "navigationBarTextStyle": "black",
            "backgroundColor": "#000000"
          }
        },
        {
          "path": "dogs_detect/dogs_detect_list",
          "style": {
            "navigationBarTitleText": "鉴定列表",
            "navigationStyle": "custom",
            "navigationBarTextStyle": "black",
            "backgroundColor": "#000000"
          }
        },
        {
          "path": "dogs_detect/dogs_detect_detail",
          "style": {
            "navigationBarTitleText": "鉴定详情",
            "navigationStyle": "custom",
            "navigationBarTextStyle": "black",
            "backgroundColor": "#000000"
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "动物识别",
    "navigationBarBackgroundColor": "#F3F3F3",
    "backgroundColor": "#F3F3F3"
  },
  "tabBar": {
    "color": "#666666",
    "selectedColor": "#0a7ea4",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabBar/img_1_1.png",
        "selectedIconPath": "static/tabBar/img_1_2.png",
        "text": "Analyse"
      },
      {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/tabBar/img_2_1.png",
        "selectedIconPath": "static/tabBar/img_2_2.png",
        "text": "Home"
      }
    ]
  }
}
